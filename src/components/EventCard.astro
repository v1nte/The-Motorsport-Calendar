---
import { Image } from "astro:assets";
import pinSvg from "../assets/pin.svg";
import circuitSvg from "../assets/circuit.svg";

const { name, fullName, circuit, dates, logo, location, lazy } = Astro.props;

const { mainEvent } = dates;

const mainEventDate = new Date(mainEvent);

const imagePath = `/The-Motorsport-Calendar/logos/${logo}.webp`;
//const imageRawPath = `https://raw.githubusercontent.com/v1nte/The-Motorsport-Calendar/refs/heads/main/public/logos/${logo}.webp`;

const monthName = mainEventDate.toLocaleString("en-US", { month: "short" });
const day = mainEventDate.toLocaleString("en-US", { day: "2-digit" });
---

<div class="bg-white rounded w-full max-w-64 overflow-hidden shadow-lg h-full">
  <div class="relative aspect-square bg-gray-500/10">
    <Image
      class="w-full h-full object-contain"
      src={imagePath}
      alt={`${logo} logo`}
      width={400}
      height={400}
      inferSize={true}
      loading={lazy}
    />
    <div
      class="text-sm absolute top-0 right-0 bg-indigo-600 px-4 text-white rounded-full h-16 w-16 flex flex-col items-center justify-center mt-3 mr-3"
    >
      <span class="font-bold">{day}</span>
      <small>{monthName}</small>
    </div>
  </div>

  <div class="px-6 pt-2">
    <h3 class="font-semibold text-2xl inline-block mb-1">{name}</h3>
    <p class="text-gray-500 text-sm min-h-16 max-w-48">
      {fullName}
    </p>
  </div>

  <section class="flex flex-col justify-between">
    {
      circuit && (
        <div class="px-6 py-1 flex items-start">
          <Image src={circuitSvg} alt="circuit svg" width="16" loading={lazy} />
          <p class="px-1 ">{circuit}</p>
        </div>
      )
    }
    {
      location && (
        <div class="px-5 flex items-start text-gray-500">
          <Image src={pinSvg} alt="pin svg" width="20" loading={lazy} />
          <p class="px-1 mb-4">{location}</p>
        </div>
      )
    }
  </section>
</div>
