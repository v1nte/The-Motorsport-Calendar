---
import Header from "../components/Header.astro";
import background from "../assets/background.svg";
import { ClientRouter } from "astro:transitions";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link
      rel="icon"
      type="image/svg+xml"
      href="/The-Motorsport-Calendar/favicon.svg"
    />
    <meta name="generator" content={Astro.generator} />
    <title>The MotorSport Calendar</title>
    <ClientRouter />
  </head>
  <body>
    <img id="background" src={background.src} alt="" fetchpriority="high" />
    <Header />
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
  #background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    filter: blur(40px);
  }
</style>
